{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/baloola/project/refs/heads/main/json-schema/schema.json#",
  "title": "Project Extension",
  "description": "STAC project Extension for STAC Catalogs, Collections and Items.",
  "type": "object",
  "required": [
    "stac_extensions"
  ],
  "properties": {
    "stac_extensions": {
      "type": "object",
      "contains": {
        "const": "https://raw.githubusercontent.com/baloola/project/refs/heads/main/json-schema/schema.json"
      }
    }
  },
  "oneOf": [
    {
      "$comment": "This is the schema for STAC Items.",
      "type": "object",
      "required": [
        "type",
        "properties"
      ],
      "properties": {
        "type": {
          "const": "Feature"
        },
        "properties": {
          "$ref": "#/definitions/fields"
        }
      }
    },
    {
      "$comment": "This is the schema for STAC Catalogs.",
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "const": "Catalog"
        }
      },
      "allOf": [
        {
          "$ref": "#/definitions/fields"
        }
      ]
    },
    {
      "$comment": "This is the schema for STAC Collections.",
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "const": "Collection"
        }
      },
      "anyOf": [
        {
          "$ref": "#/definitions/fields"
        },
        {
          "$comment": "This is the schema for the fields in Summaries. By default, only checks the existance of the properties, but not the schema of the summaries.",
          "required": [
            "summaries"
          ],
          "properties": {
            "summaries": {
              "required": [
                "project"
              ]
            }
          }
        }
      ]
    }
  ],
  "definitions": {
    "fields": {
      "type": "object",
      "required": [
        "project"
      ],
      "properties": {
        "project": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "purpose": {
              "type": "string"
            },
            "status": {
              "type": "string"
            },
            "website": {
              "allOf": [
                {
                  "$ref": "#/definitions/link"
                },
                {
                  "type": "object",
                  "required": [
                    "rel",
                    "type"
                  ],
                  "properties": {
                    "rel": {
                      "const": "related"
                    }
                  }
                }
              ]
            }
          }
        }
      }
    },
    "link": {
        "type": "object",
        "required": [
          "rel",
          "href"
        ],
        "properties": {
          "href": {
            "type": "string",
            "format": "iri-reference",
            "minLength": 1
          },
          "rel": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string"
          },
          "title": {
            "type": "string"
          }
        }
      }
  }
}